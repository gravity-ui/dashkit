{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "rootDirs": ["src", "jest"],
    "outDir": "build/esm",
    "jsx": "react",
    "baseUrl": ".",
    "module": "esnext",
    "importHelpers": true,
    "paths": {
      "*": ["./jest/*", "./node_modules/*"]
    }
  },
  "include": ["src"]
}
