{
  "name": "@gravity-ui/dashkit",
  "version": "5.0.0",
  "description": "Library for rendering dashboard grid layout",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/dashkit"
  },
  "files": [
    "build"
  ],
  "sideEffects": [
    "*.scss",
    "*.css"
  ],
  "publishConfig": {
    "access": "public"
  },
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "types": "build/esm/index.d.ts",
  "scripts": {
    "lint:prettier": "prettier --check --loglevel=error '**/*.{js,jsx,ts,tsx,scss}'",
    "lint:js": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:styles": "stylelint 'src/**/*.scss'",
    "lint": "run-p lint:*",
    "test": "jest",
    "clean": "gulp clean",
    "build": "gulp",
    "start": "env TS_NODE_PROJECT=.storybook/tsconfig.json start-storybook -p 7120",
    "typecheck": "tsc --noEmit",
    "build-storybook": "env TS_NODE_PROJECT=.storybook/tsconfig.json build-storybook -c .storybook -o storybook-static",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@gravity-ui/i18n": "^1.0.0",
    "hashids": "^2.2.8",
    "immutability-helper": "^3.1.1",
    "react-grid-layout": "^1.3.4"
  },
  "peerDependencies": {
    "@gravity-ui/uikit": "^4.0.0",
    "bem-cn-lite": "^4.0.0",
    "react": "^16.8.0  || ^17 || ^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@gravity-ui/eslint-config": "^1.0.2",
    "@gravity-ui/prettier-config": "^1.0.1",
    "@gravity-ui/stylelint-config": "^1.0.1",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@gravity-ui/uikit": "^4.0.5",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.5.9",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.170",
    "@types/react": "^18.0.27",
    "babel-jest": "^26.6.3",
    "bem-cn-lite": "^4.0.0",
    "copyfiles": "^2.4.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.1",
    "eslint": "^8.11.0",
    "gulp": "^4.0.2",
    "gulp-cli": "^2.3.0",
    "gulp-dart-sass": "^1.0.2",
    "gulp-replace": "^1.1.3",
    "gulp-typescript": "^6.0.0-alpha.1",
    "husky": "^8.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.6.0",
    "react": "^18.2.0",
    "react-docgen-typescript": "^2.2.2",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "sass": "^1.53.0",
    "sass-loader": "^10.3.1",
    "stylelint": "^14.6.0",
    "ts-jest": "^26.5.3",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix --quiet",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ]
  }
}
